<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                                   xmlns:app="http://schemas.android.com/apk/res-auto"
                                                   xmlns:tools="http://schemas.android.com/tools"
                                                   android:id="@+id/browseNoImage"
                                                   android:layout_width="match_parent"
                                                   android:layout_height="match_parent"
                                                   tools:context=".fragments.BrowseNoImageFragment">
    <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent" app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
    >
        <Space
                android:layout_width="match_parent"
                android:layout_height="0dp" android:layout_weight="1"/>
        <ImageButton
                app:srcCompat="@drawable/ic_add_black_24dp"
                android:layout_width="match_parent"
                android:layout_height="275dp" android:id="@+id/openImageButton" android:background="#00FFFFFF"
                android:scaleType="fitCenter"
                android:contentDescription="@string/open_image_button_description" android:layout_gravity="center"
                android:adjustViewBounds="false" android:cropToPadding="false"/>
        <TextView
                android:text="@string/open_image_text"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:id="@+id/openImageTextView"
                android:gravity="center|top" android:textSize="24sp" android:layout_weight="2"/>
        <Space
                android:layout_width="match_parent"
                android:layout_height="0dp" android:layout_weight="1"/>
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>